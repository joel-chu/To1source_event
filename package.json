{
  "name": "@to1source/event",
  "version": "1.3.0",
  "description": "An universal event (emitter) service for Browser / Node",
  "module": "index.js",
  "browser": "dist/to1source-event.umd.js",
  "main": "dist/to1source-event.cjs.js",
  "files": [
    "alias.js",
    "index.js",
    "dist",
    "src"
  ],
  "scripts": {
    "_prepare": "npm run build && npm run test",
    "test": "ava",
    "coverage": "nyc ava",
    "build": "npm run build:umd && npm run build:alias:umd && npm run build:cjs && npm run build:alias:cjs",
    "build:umd": "TARGET=umd rollup -c",
    "build:cjs": "TARGET=cjs rollup -c",
    "build:alias:umd": "NODE_ENV=alias TARGET=umd rollup -c",
    "build:alias:cjs": "NODE_ENV=alias TARGET=cjs rollup -c",
    "test:browser": "node ./tests/fixtures/browser.js",
    "test:basic": "DEBUG=nb-event-service* ava ./tests/basic.test.js",
    "test:ms": "DEBUG=nb-event-service* ava ./tests/map-set.test.js",
    "test:once": "DEBUG=nb-event-service* ava ./tests/once-problem.test.js",
    "test:alias": "DEBUG=nb-event-service* ava ./tests/alias.test.js",
    "test:only": "DEBUG=nb-event-service* ava ./tests/only.test.js",
    "test:oo": "DEBUG=nb-event-service* ava ./tests/only-once.test.js",
    "test:replace": "DEBUG=nb-event-service* ava ./tests/replace.test.js",
    "test:lazy": "DEBUG=nb-event-service* ava ./tests/lazy.test.js",
    "test:watch": "DEBUG=nb-event-service* ava ./tests/watch.test.js",
    "test:array": "DEBUG=nb-event-service* ava ./tests/array-result.test.js",
    "test:suspend": "DEBUG=nb-event-service* ava ./tests/suspend.test.js",
    "test:max": "DEBUG=to1source-event* ava ./tests/max.test.js",
    "prepublishOnly": "npm run build && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitee.com:to1source/to1source_event.git"
  },
  "homepage": "https://gitee.com:to1source/to1source_event",
  "keywords": [
    "event",
    "javascript",
    "node"
  ],
  "author": "to1source <tosource@foxmail.com>",
  "license": "UNLICENSED",
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "ignoredByWatcher": [
      "!tests/helpers/*.*",
      "!tests/fixtures/*.*"
    ],
    "require": [
      "esm"
    ],
    "cache": true,
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "verbose": false
  },
  "devDependencies": {
    "acorn": "^8.7.1",
    "ava": "^4.3.0",
    "debug": "^4.3.4",
    "esm": "^3.2.25",
    "nyc": "^15.1.0",
    "rollup": "^2.75.6",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-terser": "^7.0.2",
    "server-io-core": "^1.4.0"
  }
}
